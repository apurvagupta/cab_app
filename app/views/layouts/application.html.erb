<!DOCTYPE html>
<html>
  <head>
    <title>CabApp</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

  </head>
  <body>

    <div class= "row-fluid">

      <div class="span1"></div>

      <div class="span10">
        <div class= "row-fluid">
            <div class="page-title">
              <h1>Cab Requisition System</h1>
            </div>
        </div>

        <div class= "row-fluid">
            <div class="content-main">


              <div class="navbar navbar-inverse">
                <div class="navbar-inner">
                  <div class="tabbable">
                   <ul class="nav nav-tabs">
                    <li class="cab-logo">
                      <img src="/assets/cab_logo.gif">
                    </li>
                    <li><a href="/cab_requests/new" id="Book A Cab">Book A Cab</a></li>
                    <li><a href="/cab_requests/show" id="View My Requests">View My Requests</a></li>
                    <% if @is_admin %>
                        <li>
                          <a href="/support_centers" id="Manage App" >Manage App</a>
                        </li>
                        <li>
                          <a href="/support_centers/show" id="View All Reports" >View All Reports</a>
                        </li>
                    <% else %>
                        <li>
                          <a href="/support_centers" id="Contact Us" >Contact Us</a>
                        </li>
                    <% end %>
                  </ul>
              <ul class="nav pull-right">
                <li id="welcome_text">Welcome, <%= current_user %>
                </li>
                <li class="dropdown">
                  <a id="dropdown"  class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="icon-user"></i>
                  </a>

                      <ul class="dropdown-menu">
                        <li id="logout" ><a href="/requesters/logout">Log Out</a></li>
                      </ul>
                    </li>
                  </ul>
                 </div>

                </div>
              </div>
              <%= yield%>

            </div>
          </div>
        <div class= "row-fluid">

          <div class="footer">
            <span>Copyright &copy 2013, ThoughtWorks, Inc. All rights reserved
             <a href="http://www.thoughtworks.com">
               <img src="/assets/thoughtworks.gif">
             </a>
            </span>
          </div>
        </div>
      </div>

      <div class="span1"></div>
    </div>

  </body>
</html>
