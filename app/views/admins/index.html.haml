= render '/permissions'

-if @is_admin
  %br
  %br
  .row-fluid
    .span1
    .span10
      %table{cellspacing: 50, id: 'table', :class=>"table table-striped table-hover "}
        %th Name
        %th Contact No
        %th
        %th
        - @admins.each do |admin|
          %tr
            %td= admin.name
            %td= admin.contact_no
            %td= link_to 'Edit', edit_admin_path(admin)
            %td= link_to 'Delete', admin_path(admin), :method => :delete, :confirm => 'Are you sure?', :hidden => admin.status || admin.name == @user_id
        %end


      = link_to 'New', new_admin_path
    .span1