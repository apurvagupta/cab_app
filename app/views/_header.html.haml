.header
  .left_header
    %img{:src => "/assets/thoughtworks.gif"}
  .right_header
    %h1 Cab Requisition System
  .menu_bar
    %ui{:id => 'nav'}
      %li

        -if ((@cr || @ad) && !@cr_show)
          %h4= link_to "View My Reports", '/cab_requests/show'
      %li
        -if @ad || @cr_show
          %h4= link_to "Book A CAB",new_cab_request_path
      %li
        -if !$is_admin & @cr
          %h4= link_to "Contact Us",support_center_index_path

      %li
        -if $is_admin
          -if @cr
            %h4= link_to "Manage App",support_center_index_path
          -if @ad
            %h4= link_to "View All Reports", '/support_center/show'
      %li
        %h4= link_to "logout",requesters_logout_path, :id => 'logout_link'