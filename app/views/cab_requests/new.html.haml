%h1 Create Request

-if @bool
  %h4= link_to "manage app",admins_path

%h4= link_to "logout",cab_requests_logout_path

%hr

  = form_for(@cab_request) do |f|
    =if @cab_request.errors.any?
      #error_explanation
        %h2= pluralize(@cab_request.errors.count, "error")
        %ul
          =@cab_request.errors.full_messages.each do |msg|
            %li=  msg
          %end
    %end

    .field
      = f.label "Request_ID:"
      = f.text_field :id ,:disabled => true

    .field
      = f.label "Requester:"
      = f.text_field :requester ,:disabled => true

    .field
      = f.label "pick_up_for:"
      = f.text_field :pick_up_for

    .field
      = f.label "Contact_no:"
      = f.text_field :contact_no

    .field
      = f.label "Date:"
      = f.datepicker :date

    .field
      = f.label "Time:"
      %select{:name => "hours" }
        -@hours.each do|hours|
          %option= hours
        %end

      = ":"

      %select{:name => "minutes" }
        -@minutes.each do|minutes|
          %option= minutes
        %end

      %select{:name=>"ampm"}
        -@ampm.each do|ampm|
          %option= ampm
        %end

    .field
      =f.label "Source:"
      %select{:name => "cab_request[source]" }
        -@sources.each do|source|
          %option= source
        %end

    .field
      =f.label "Destination:"
      %select{:name => "cab_request[destination]" }
        -@destinations.each do|destination|
          %option= destination
        %end

    .field
      =f.label "No of passengers:"
      %select{:name => "cab_request[no_of_passengers]" }
        -@num.each do|i|
          %option= i
        %end

    .field
      =f.label "Comments:"
      =f.text_field :comments

    .field
      =f.submit "Send"

  %end

    =link_to 'cancel', cab_requests_path


