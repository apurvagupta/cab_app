-@num = Array(1..50)
-@sources = ["Airport","Guest House","McKinsey","ThoughtWorks","other"]
-@destinations = ["Airport","Guest House","McKinsey","ThoughtWorks","other"]
.row-fluid
  .span6
    .form-horizontal
      = form_for(@cab_request) do |f|

        -if @cab_request.errors.any?
          #error_explanation
            %h2= pluralize(@cab_request.errors.count, "error")
            %ul
              -@cab_request.errors.full_messages.each do |msg|
                %li=  msg
              %end
        .controls
          %h2 BOOK A CAB
        %br
        %br

        .row-fluid.form-main
          .span4
            %h4 For?
          .span8
            .control-group
              -#= f.label "Name:", class: 'control-label'
              .controls
                = f.text_field :traveler_name ,:id => "traveler_name", :placeholder => "name"

            .control-group
              -#= f.label "Contact No:", class: 'control-label'
              .controls
                = f.text_field :contact_no, :placeholder => "contact no" , :id => "contact_no"
        .row-fluid.form-main
          .span4
            %h4 When?
          .span8
            .control-group
              -#=f.label "When", class: 'control-label'
              .controls
                =f.text_field :pick_up_date ,:id => "pick_up_date", autocomplete: "off", readonly: 'true', placeholder: "Date"

            .control-group
              -#= f.label "At What Time:", class: 'control-label'
              .controls
                = f.text_field :pick_up_date_time , :id => 'pick_up_time', :value => @cab_request.pick_up_date_time, autocomplete: "off",readonly: 'true' , placeholder: "Time"

        .row-fluid.form-main
          .span4
            %h4 From?
          .span8
            .control-group
              .controls
                %select{ :id => "source" , :name => "cab_request[source]" ,:onchange => "onSelectedValueChange('source','other_source');" }
                  -@sources.each do|source|
                    %option{:selected => (source == @cab_request.source)}= source
                  %end

                %input{:type => "hidden", :name => "source", :id => "other_source" , :value => @other_source , :disabled => false}

        .row-fluid.form-main
          .span4
            %h4 To?
          .span8
            .control-group
              .controls
                %select{:name => "cab_request[destination]", :id =>"destination", :onchange => "onSelectedValueChange('destination','other_destination');" }
                  -@destinations.each do|destination|
                    %option{:selected => (destination == @cab_request.destination)}= destination
                  %end


                %input{:type => 'hidden', :name=> "destination", :id => "other_destination" , :disabled => true ,:value => @other_destination}
        .row-fluid.form-main
          .span4
            %h4 Passengers?
          .span8
            .control-group
              -#=f.label "No of passengers:", class: 'control-label'
              .controls
                = f.text_field :no_of_passengers ,:value => @cab_request.no_of_passengers, :placeholder => "No of passengers", :id => "no_of_passengers"
        .row-fluid.form-main
          .span4
            %h4 Comments?
          .span8
            .control-group
              -#=f.label "Any Message:", class: 'control-label'
              .controls
                =f.text_field :comments, :placeholder => "Any message"

        .control-group
          =f.submit "Confirm Booking" ,class: 'btn controls', id: "Create cab_request"
          =f.button "Cancel", class: 'btn', type: 'reset'

  .span6
