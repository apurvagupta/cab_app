  =form_tag :action => :update do
    %h2 CAB REQUEST MESSAGE WILL BE SENT TO:
    %b ADMIN :
    %select{:name => "admin" , id: "admins"}
      -@admins.each do|admin|
        %option{ :selected => admin.status }= admin.name
      %end
    %br
    %br
    %br
