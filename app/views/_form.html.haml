.row-fluid.form-main
  .span12
    = form_for(@info) do |f|
      -if @info.errors.any?
        #error_explanation
          %h2= pluralize(@info.errors.count, "error")
          %ul
            -@info.errors.full_messages.each do |msg|
              %li=  msg
            %end
      %end

      .field
        .control-group
          = f.label "Name:"
        .controls
          = f.text_field :name, :id => 'name', required: true, title: 'only alphabets'

      .field
        .control-group
          = f.label "Contact No:"
        .controls
          = f.text_field :contact_no, :id => 'contact_no'

      .action
        .field
          = f.submit :class => 'btn btn-primary' ,id: "submit"


