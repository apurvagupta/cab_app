.row-fluid
  .form-horizontal
    = form_for(@info) do |f|
      -if @info.errors.any?
        #error_explanation
          %h2= pluralize(@info.errors.count, "error")
          %ul
            -@info.errors.full_messages.each do |msg|
              %li=  msg
            %end
      %end

        .row-fluid
          .span2
            = f.label "Name:"
          .span4
            .control-group
              = f.text_field :name, :id => 'name', required: true, title: 'only alphabets', pattern: '^[a-b A-Z]$'

        .row-fluid
          .span2
            = f.label "Contact No:"
          .span4
            .control-group
              = f.text_field :contact_no, :id => 'contact_no', required: true, pattern: '^[0-9]+${10}'

        .row-fluid
          .span2
          .span4
            = f.submit :class => 'btn btn-primary' ,id: "submit"
